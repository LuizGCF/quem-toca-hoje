<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_tela"
    tools:context="com.example.quemtocahoje.Views.TelaCadastroEspectador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:srcCompat="@drawable/logoaplicativo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Perfil:"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:id="@+id/rgpPerfil"
                android:orientation="horizontal"
                android:backgroundTint="#fff"
                android:checkedButton="@+id/rbMusico" >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbMusico"
                    android:text="MÃºsico"
                    android:textSize="15dp"
                    android:textColor="#F5F7F7"
                    android:textStyle="bold"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbEstabelecimento"
                    android:text="Estabelecimento"
                    android:textSize="15dp"
                    android:textColor="#F5F7F7"
                    android:textStyle="bold"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbEspectador"
                    android:text="Espectador"
                    android:textSize="15dp"
                    android:textColor="#F5F7F7"
                    android:textStyle="bold"/>
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <EditText
                android:id="@+id/edtNomeEspectador"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Nome"
                android:inputType="text"
                android:textColor="#000"
                android:textCursorDrawable="@drawable/estilo_cursor"
                android:background="@drawable/estilo_edittext_cadastros"
                android:textColorHint="#000"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/edtEmailEspectador"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:background="@drawable/estilo_edittext_cadastros"
                android:textCursorDrawable="@drawable/estilo_cursor"
                android:textColorHint="#000"
                android:textSize="15dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edtLoginEspectador"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Login"
                android:inputType="text"
                android:textColor="#000"
                android:background="@drawable/estilo_edittext_cadastros"
                android:textCursorDrawable="@drawable/estilo_cursor"
                android:textColorHint="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtSenhaEspectador"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="#000"
                android:background="@drawable/estilo_edittext_cadastros"
                android:textCursorDrawable="@drawable/estilo_cursor"
                android:textColorHint="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtConfirmarSenhaEspectador"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cursorVisible="true"
                android:gravity="center"
                android:hint="Confirmar Senha"
                android:inputType="textPassword"
                android:textColor="#000"
                android:background="@drawable/estilo_edittext_cadastros"
                android:textCursorDrawable="@drawable/estilo_cursor"
                android:textColorHint="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCadastrarEspectador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/estilo_botao"
                    android:textColor="#F5F7F7"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Cadastrar" />

                <Button
                    android:id="@+id/btnCancelarEspectador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/estilo_botao"
                    android:textColor="#F5F7F7"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Voltar"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>
