<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/imgPerfil"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/txtNomePerfil"
        android:layout_below="@id/imgPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição/Gênero"
        android:id="@+id/txtDescricaoPerfil"
        android:layout_below="@+id/txtNomePerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_below="@id/txtDescricaoPerfil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:id="@+id/imgPerfil1"/>
    <!--Adapter para a listview abaixo das avaliacoes, notas e seu comentário-->
    <ListView
        android:layout_below="@id/imgPerfil1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/lstAvaliacoes" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Média: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/lstAvaliacoes"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMensagem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:text="Mensagem"/>
</RelativeLayout>