package com.example.quemtocahoje.Controller;

import android.content.ContentValues;
import android.content.Context;
import android.database.sqlite.SQLiteDatabase;

import com.example.quemtocahoje.Banco.Banco;

public class CadMusicoDAO
{

    private SQLiteDatabase db;
    private Banco banco;

    public CadMusicoDAO(Context context)
    {
        banco= new Banco(context);
    }

    public String cadastrarMusico(String nomeMusico,String nomeArtistico,String celular,String login,String senha,String email)
    {
        ContentValues valores;
        long incremento;
        db = banco.getWritableDatabase();
        valores = new ContentValues();
        valores.put(Banco.Musico,nomeMusico);
        valores.put(Banco.Musico,nomeArtistico);
        valores.put(Banco.Musico,celular);
        valores.put(Banco.Musico,login);
        valores.put(Banco.Musico,senha);
        valores.put(Banco.Musico,email);

        incremento = db.insert(Banco.Musico,null,valores);
        db.close();

        if(incremento == -1)
            return "Erro ao inserir Músico";
        else
            return "Músico cadastrado com sucesso";

    }

}